<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/whiteV2</item>
        <item name="colorAccent">@color/greyV1</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="labelWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/whiteV1</item>
        <item name="android:textColorHint">@color/whiteV1</item>
        <item name="colorAccent">@color/whiteV1</item>
        <item name="colorControlNormal">@color/whiteV1</item>
        <item name="colorControlActivated">@color/whiteV1</item>
    </style>

    <style name="labelError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
    </style>
</resources>
